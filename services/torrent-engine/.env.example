# ── Server ────────────────────────────────────────────────────────
HTTP_ADDR=:8080
LOG_LEVEL=info                          # debug | info | warn | error
LOG_FORMAT=text                         # text | json

# ── MongoDB ──────────────────────────────────────────────────────
MONGO_URI=mongodb://localhost:27017
MONGO_DB=torrentstream
MONGO_COLLECTION=torrents

# ── Torrent storage ──────────────────────────────────────────────
TORRENT_DATA_DIR=data
TORRENT_STORAGE_MODE=disk               # disk | memory | hybrid
TORRENT_MEMORY_LIMIT_BYTES=0            # 0 = unlimited (memory/hybrid mode)
TORRENT_MEMORY_SPILL_DIR=               # spill dir for hybrid mode

# ── Media processing ─────────────────────────────────────────────
FFMPEG_PATH=ffmpeg
FFPROBE_PATH=ffprobe

# ── HLS streaming ────────────────────────────────────────────────
HLS_DIR=                                # default: OS temp dir
HLS_PRESET=veryfast                     # FFmpeg preset
HLS_CRF=23                             # quality (0-51, lower = better)
HLS_AUDIO_BITRATE=128k
HLS_CACHE_SIZE_BYTES=10737418240        # 10 GB
HLS_CACHE_MAX_AGE_HOURS=168            # 7 days

# ── OpenAPI ──────────────────────────────────────────────────────
OPENAPI_PATH=                           # optional custom path to openapi.json

# ── Observability ────────────────────────────────────────────────
OTEL_EXPORTER_OTLP_ENDPOINT=            # e.g. http://jaeger:4318
