{
  "openapi": "3.0.3",
  "info": {
    "title": "Torrent Stream API",
    "version": "0.1.0"
  },
  "paths": {
    "/torrents": {
      "get": {
        "summary": "List torrents",
        "parameters": [
          {
            "name": "status",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["active", "completed", "stopped", "all"],
              "default": "all"
            }
          },
          {
            "name": "view",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["summary", "full", "compact"],
              "default": "summary"
            }
          },
          {
            "name": "search",
            "in": "query",
            "schema": { "type": "string" }
          },
          {
            "name": "tags",
            "in": "query",
            "description": "Comma-separated tag filter, e.g. movie,anime",
            "schema": { "type": "string" }
          },
          {
            "name": "sortBy",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["name", "createdAt", "updatedAt", "totalBytes", "progress"],
              "default": "updatedAt"
            }
          },
          {
            "name": "sortOrder",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["asc", "desc"],
              "default": "desc"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "schema": { "type": "integer", "minimum": 1 }
          },
          {
            "name": "offset",
            "in": "query",
            "schema": { "type": "integer", "minimum": 0 }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "oneOf": [
                    { "$ref": "#/components/schemas/TorrentListSummary" },
                    { "$ref": "#/components/schemas/TorrentListFull" }
                  ]
                }
              }
            }
          },
          "400": {
            "description": "Invalid request",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create torrent",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateTorrentJSON"
              },
              "examples": {
                "magnet": {
                  "value": {
                    "magnet": "magnet:?xt=urn:btih:..."
                  }
                }
              }
            },
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/CreateTorrentMultipart"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TorrentRecord"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "415": {
            "description": "Unsupported media type",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/torrents/{id}": {
      "get": {
        "summary": "Get torrent",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TorrentRecord"
                }
              }
            }
          },
          "404": {
            "description": "Not found",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Delete torrent",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "deleteFiles",
            "in": "query",
            "schema": { "type": "boolean", "default": false }
          }
        ],
        "responses": {
          "204": { "description": "No Content" },
          "404": {
            "description": "Not found",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      }
    },
    "/torrents/{id}/start": {
      "post": {
        "summary": "Start torrent download",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/TorrentRecord" }
              }
            }
          },
          "404": {
            "description": "Not found",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      }
    },
    "/torrents/{id}/stop": {
      "post": {
        "summary": "Stop torrent download",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/TorrentRecord" }
              }
            }
          },
          "404": {
            "description": "Not found",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      }
    },
    "/torrents/{id}/stream": {
      "get": {
        "summary": "Stream torrent file",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "fileIndex",
            "in": "query",
            "required": true,
            "schema": { "type": "integer", "minimum": 0 }
          },
          {
            "name": "Range",
            "in": "header",
            "required": false,
            "schema": { "type": "string" },
            "description": "HTTP byte range, e.g. bytes=0-1023"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/octet-stream": {
                "schema": { "type": "string", "format": "binary" }
              }
            }
          },
          "206": {
            "description": "Partial Content",
            "content": {
              "application/octet-stream": {
                "schema": { "type": "string", "format": "binary" }
              }
            }
          },
          "400": {
            "description": "Invalid request",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "404": {
            "description": "Not found",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "416": {
            "description": "Range not satisfiable"
          }
        }
      }
    },
    "/torrents/{id}/hls/{fileIndex}/index.m3u8": {
      "get": {
        "summary": "Stream torrent file as HLS playlist",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "fileIndex",
            "in": "path",
            "required": true,
            "schema": { "type": "integer", "minimum": 0 }
          },
          {
            "name": "audioTrack",
            "in": "query",
            "required": false,
            "schema": { "type": "integer", "minimum": 0, "default": 0 }
          },
          {
            "name": "subtitleTrack",
            "in": "query",
            "required": false,
            "deprecated": true,
            "description": "Deprecated. Subtitle rendering uses /torrents/{id}/subtitles/{fileIndex}/{subtitleTrack}.vtt.",
            "schema": { "type": "integer", "minimum": 0 }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/vnd.apple.mpegurl": {
                "schema": { "type": "string" }
              }
            }
          },
          "400": {
            "description": "Invalid request",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "503": {
            "description": "Stream not ready",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      }
    },
    "/torrents/{id}/media/{fileIndex}": {
      "get": {
        "summary": "Probe media tracks (audio/subtitle) for torrent file",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "fileIndex",
            "in": "path",
            "required": true,
            "schema": { "type": "integer", "minimum": 0 }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/MediaInfo" }
              }
            }
          },
          "400": {
            "description": "Invalid request",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "404": {
            "description": "Not found",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      }
    },
    "/torrents/{id}/subtitles/{fileIndex}/{subtitleTrack}.vtt": {
      "get": {
        "summary": "Get subtitle track as WebVTT",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } },
          { "name": "fileIndex", "in": "path", "required": true, "schema": { "type": "integer", "minimum": 0 } },
          { "name": "subtitleTrack", "in": "path", "required": true, "schema": { "type": "integer", "minimum": 0 } }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/vtt": {
                "schema": { "type": "string" }
              }
            }
          },
          "400": {
            "description": "Invalid request",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "404": {
            "description": "Subtitle track not found",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "504": {
            "description": "Subtitle conversion timeout",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      },
      "head": {
        "summary": "Probe subtitle track readiness",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } },
          { "name": "fileIndex", "in": "path", "required": true, "schema": { "type": "integer", "minimum": 0 } },
          { "name": "subtitleTrack", "in": "path", "required": true, "schema": { "type": "integer", "minimum": 0 } }
        ],
        "responses": {
          "200": { "description": "Ready" },
          "404": { "description": "Not found" }
        }
      }
    },
    "/torrents/{id}/hls/{fileIndex}/{segment}": {
      "get": {
        "summary": "Get HLS segment",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "fileIndex",
            "in": "path",
            "required": true,
            "schema": { "type": "integer", "minimum": 0 }
          },
          {
            "name": "segment",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "audioTrack",
            "in": "query",
            "required": false,
            "schema": { "type": "integer", "minimum": 0, "default": 0 }
          },
          {
            "name": "subtitleTrack",
            "in": "query",
            "required": false,
            "deprecated": true,
            "description": "Deprecated. Subtitle rendering uses /torrents/{id}/subtitles/{fileIndex}/{subtitleTrack}.vtt.",
            "schema": { "type": "integer", "minimum": 0 }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "video/MP2T": {
                "schema": { "type": "string", "format": "binary" }
              }
            }
          },
          "404": {
            "description": "Not found",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      }
    },
    "/torrents/{id}/state": {
      "get": {
        "summary": "Get torrent session state",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/SessionState" }
              }
            }
          },
          "404": {
            "description": "Not found",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      }
    },
    "/torrents/state": {
      "get": {
        "summary": "List active torrent session states",
        "parameters": [
          {
            "name": "status",
            "in": "query",
            "required": true,
            "schema": { "type": "string", "enum": ["active"] }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/SessionStateList" }
              }
            }
          },
          "400": {
            "description": "Invalid request",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      }
    },
    "/torrents/{id}/focus": {
      "post": {
        "summary": "Focus torrent for active playback",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "204": { "description": "Focused" },
          "404": {
            "description": "Not found",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "500": {
            "description": "Internal error",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "501": {
            "description": "Not configured",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      }
    },
    "/torrents/unfocus": {
      "post": {
        "summary": "Clear focused torrent",
        "responses": {
          "204": { "description": "Unfocused" },
          "500": {
            "description": "Internal error",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "501": {
            "description": "Not configured",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      }
    },
    "/torrents/bulk/start": {
      "post": {
        "summary": "Start multiple torrents",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/BulkActionRequest" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Bulk action result",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/BulkActionResponse" }
              }
            }
          },
          "400": {
            "description": "Invalid request",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "500": {
            "description": "Not configured",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      }
    },
    "/torrents/bulk/stop": {
      "post": {
        "summary": "Stop multiple torrents",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/BulkActionRequest" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Bulk action result",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/BulkActionResponse" }
              }
            }
          },
          "400": {
            "description": "Invalid request",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "500": {
            "description": "Not configured",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      }
    },
    "/torrents/bulk/delete": {
      "post": {
        "summary": "Delete multiple torrents",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/BulkActionRequest" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Bulk action result",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/BulkActionResponse" }
              }
            }
          },
          "400": {
            "description": "Invalid request",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "500": {
            "description": "Not configured",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      }
    },
    "/torrents/{id}/tags": {
      "put": {
        "summary": "Replace torrent tags",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/TagsUpdateRequest" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Updated",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/TorrentRecord" }
              }
            }
          },
          "400": {
            "description": "Invalid request",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "404": {
            "description": "Not found",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "500": {
            "description": "Repository error",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      }
    },
    "/torrents/{id}/hls/{fileIndex}/seek": {
      "post": {
        "summary": "Seek HLS stream",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } },
          { "name": "fileIndex", "in": "path", "required": true, "schema": { "type": "integer", "minimum": 0 } },
          { "name": "time", "in": "query", "required": true, "schema": { "type": "number", "minimum": 0 } },
          { "name": "audioTrack", "in": "query", "required": false, "schema": { "type": "integer", "minimum": 0 } },
          {
            "name": "subtitleTrack",
            "in": "query",
            "required": false,
            "deprecated": true,
            "description": "Deprecated. Subtitle rendering uses /torrents/{id}/subtitles/{fileIndex}/{subtitleTrack}.vtt.",
            "schema": { "type": "integer", "minimum": -1 }
          }
        ],
        "responses": {
          "200": {
            "description": "Seek accepted",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/HLSSeekResponse" } }
            }
          },
          "400": { "description": "Invalid request", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ErrorResponse" } } } },
          "500": { "description": "Seek failed", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ErrorResponse" } } } }
        }
      }
    },
    "/torrents/{id}/direct/{fileIndex}": {
      "get": {
        "summary": "Direct browser playback (MP4/M4V or remuxed MKV)",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } },
          { "name": "fileIndex", "in": "path", "required": true, "schema": { "type": "integer", "minimum": 0 } },
          { "name": "Range", "in": "header", "required": false, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "Ready", "content": { "video/mp4": { "schema": { "type": "string", "format": "binary" } } } },
          "202": { "description": "Remux in progress", "headers": { "Retry-After": { "schema": { "type": "string" } } } },
          "404": { "description": "Not found / unsupported" }
        }
      },
      "head": {
        "summary": "Probe direct playback readiness",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } },
          { "name": "fileIndex", "in": "path", "required": true, "schema": { "type": "integer", "minimum": 0 } }
        ],
        "responses": {
          "200": { "description": "Ready" },
          "202": { "description": "Remux in progress" },
          "404": { "description": "Not found / unsupported" }
        }
      }
    },
    "/settings/encoding": {
      "get": {
        "summary": "Get encoding settings",
        "responses": {
          "200": { "description": "OK", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/EncodingSettings" } } } },
          "501": { "description": "Not configured", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ErrorResponse" } } } }
        }
      },
      "patch": {
        "summary": "Update encoding settings",
