# ── Server ────────────────────────────────────────────────────────
HTTP_ADDR=:8090
LOG_LEVEL=info                          # debug | info | warn | error
LOG_FORMAT=text                         # text | json

# ── Search ───────────────────────────────────────────────────────
SEARCH_TIMEOUT_SECONDS=15
SEARCH_USER_AGENT=torrent-stream-search/1.0

# ── Providers ────────────────────────────────────────────────────
SEARCH_PROVIDER_PIRATEBAY_ENDPOINT=https://apibay.org/q.php
SEARCH_PROVIDER_1337X_ENDPOINT=https://x1337x.ws,https://1337x.to,https://1377x.to
SEARCH_PROVIDER_RUTRACKER_ENDPOINT=https://rutracker.org/forum/tracker.php

# RuTracker auth (use cookie string OR individual values)
SEARCH_PROVIDER_RUTRACKER_COOKIE=
# SEARCH_PROVIDER_RUTRACKER_BB_SESSION=
# SEARCH_PROVIDER_RUTRACKER_BB_GUID=
# SEARCH_PROVIDER_RUTRACKER_BB_SSL=
# SEARCH_PROVIDER_RUTRACKER_CF_CLEARANCE=
SEARCH_PROVIDER_RUTRACKER_PROXY=        # optional SOCKS5/HTTP proxy

# ── Cloudflare bypass ────────────────────────────────────────────
FLARESOLVERR_URL=                       # e.g. http://flaresolverr:8191/

# ── Cache (Redis) ────────────────────────────────────────────────
REDIS_URL=                              # e.g. redis://localhost:6379
SEARCH_CACHE_TTL_HOURS=6
SEARCH_CACHE_DISABLED=false

# ── TMDB enrichment ──────────────────────────────────────────────
TMDB_API_KEY=
TMDB_BASE_URL=https://api.themoviedb.org/3
TMDB_CACHE_TTL_DAYS=7

# ── Observability ────────────────────────────────────────────────
OTEL_EXPORTER_OTLP_ENDPOINT=            # e.g. http://jaeger:4318
